---fALTA QUE SUBAN EL jIRA DE PROFESION Y QUE encripten la variable de id tomador de la tabla de recaudos
-- Nivel de Riesgo LAFT + Ocupación + info de siniestros
SELECT DISTINCT
    -- Datos de la póliza
    p.CODIGO_COMPANIA,
    p.TIPO_DOCUMENTO_TOMADOR,
    p.KEY_ID_TOMADOR,

    -- Datos del cliente (valores NULL se reemplazan por 0)
    IFNULL(c.VALOR_ACTIVO, 0) AS VALOR_ACTIVO,
    IFNULL(c.VALOR_PASIVO, 0) AS VALOR_PASIVO,
    IFNULL(c.VALOR_INGRESOS, 0) AS VALOR_INGRESOS,
    IFNULL(c.VALOR_EGRESOS, 0) AS VALOR_EGRESOS,
    c.CODIGO_CIIU,
    c.ACTIVIDAD_ECONOMICA,
    c.COD_OCUPACION,
    o.ocupacion,

    -- Nivel de riesgo desde la tabla de score
    IFNULL(s.NIVEL_DE_RIESGO, 'Sin Nivel Riesgo') AS NIVEL_DE_RIESGO,

    -- Agregados de siniestros (con valores por defecto si no hay match)
    IFNULL(sin.CANTIDAD_REGISTROS, 0) AS CANTIDAD_SINIESTROS_ULT_12_MESES,
    IFNULL(sin.SUMATORIA_LIQUIDADO, 0) AS SUMA_LIQUIDADO_ULT_12_MESES

FROM 
    `sb-ecosistemaanalitico-lago.seguros_bolivar.t_polizas` p

LEFT JOIN 
    `sb-ecosistemaanalitico-lago.seguros_bolivar.t_clientes_naturales` c
    ON p.TIPO_DOCUMENTO_TOMADOR = c.TIPO_DOCUMENTO
    AND p.KEY_ID_TOMADOR = c.KEY_ID

LEFT JOIN 
    `sb-sandbox-usuarios.sandbox_cumplimiento.Score_de_terceros_Tabla_C` s
    ON p.CODIGO_COMPANIA = s.CODIGO_COMPANIA
    AND p.TIPO_DOCUMENTO_TOMADOR = s.TIPO_DOCUMENTO
    AND p.KEY_ID_TOMADOR = s.KEY_ID

LEFT JOIN 
    `sb-ecosistemaanalitico-lago.cumplimiento_normativo_prod.t_ocupacion_nivel_riesgo_real` o
    ON c.COD_OCUPACION = o.id

-- LEFT JOIN con siniestros agregados por compañía + tomador
LEFT JOIN (
    SELECT
        CODIGO_COMPANIA,
        TIPO_DOCUMENTO_TOMADOR,
        KEY_ID_TOMADOR,
        COUNT(*) AS CANTIDAD_REGISTROS,
        SUM(LIQUIDADO_BOLIVAR) AS SUMATORIA_LIQUIDADO
    FROM
        `sb-ecosistemaanalitico-lago.seguros_bolivar.t_siniestros`
    WHERE
        DATE(FECHA_ORDEN_PAGO) BETWEEN 
            DATE_TRUNC(DATE_SUB(CURRENT_DATE(), INTERVAL 12 MONTH), MONTH)
            AND DATE_SUB(DATE_TRUNC(CURRENT_DATE(), MONTH), INTERVAL 1 DAY)
    GROUP BY
        CODIGO_COMPANIA,
        TIPO_DOCUMENTO_TOMADOR,
        KEY_ID_TOMADOR
) sin
    ON p.CODIGO_COMPANIA = sin.CODIGO_COMPANIA
    AND p.TIPO_DOCUMENTO_TOMADOR = sin.TIPO_DOCUMENTO_TOMADOR
    AND p.KEY_ID_TOMADOR = sin.KEY_ID_TOMADOR

-- Solo pólizas activas (vigentes a hoy)
WHERE DATE(p.FECHA_FIN_POLIZA) >= CURRENT_DATE()  AND p.KEY_ID_TOMADOR = 'vetBuut3LllceTeWAUNWC6y00J5Iwq3y1jDqetNp1LlfYHB6WmWpewrPfLvLRngvOFEhqsrXnusRvlk+HUL+5Q==';






-------------------------------






SELECT
    CODIGO_COMPANIA,
    TIPO_DOCUMENTO_TOMADOR,
    NUMERO_DOCUMENTO_TOMADOR,
    COUNT(*) AS CANTIDAD_REGISTROS,
    SUM(VALOR_RECAUDO_MES) AS SUMATORIA_RECAUDO
FROM
    `sb-ecosistemaanalitico-lago.datamart.t_produccion_recaudo_diario`
WHERE
    DATE(FECHA_RECAUDO) BETWEEN 
        DATE_TRUNC(DATE_SUB(CURRENT_DATE(), INTERVAL 12 MONTH), MONTH)
        AND DATE_SUB(DATE_TRUNC(CURRENT_DATE(), MONTH), INTERVAL 1 DAY)
GROUP BY
    CODIGO_COMPANIA,
    TIPO_DOCUMENTO_TOMADOR,
    NUMERO_DOCUMENTO_TOMADOR


-------------------------------------------

SELECT
    CODIGO_COMPANIA,
    TIPO_DOCUMENTO_TOMADOR,
    KEY_ID_TOMADOR,
    COUNT(*) AS CANTIDAD_REGISTROS,
    SUM(LIQUIDADO_BOLIVAR) AS SUMATORIA_LIQUIDADO
FROM
    `sb-ecosistemaanalitico-lago.seguros_bolivar.t_siniestros`
WHERE
    DATE(FECHA_ORDEN_PAGO) BETWEEN 
        DATE_TRUNC(DATE_SUB(CURRENT_DATE(), INTERVAL 12 MONTH), MONTH)
        AND DATE_SUB(DATE_TRUNC(CURRENT_DATE(), MONTH), INTERVAL 1 DAY)
GROUP BY
    CODIGO_COMPANIA,
    TIPO_DOCUMENTO_TOMADOR,
    KEY_ID_TOMADOR

