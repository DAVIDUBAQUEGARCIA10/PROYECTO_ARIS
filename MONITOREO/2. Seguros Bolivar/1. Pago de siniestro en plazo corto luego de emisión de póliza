-- Insertar solo nuevos registros que no estÃ©n ya en la tabla
INSERT INTO sb-sandbox-usuarios.sandbox_cumplimiento.SEG_0007_VISOR_REPO (
    CODIGO_COMPANIA, 
    CODIGO_RAMO_CONTABLE, 
    NOMBRE_RAMO_CONTABLE,
    CODIGO_PRODUCTO,
    NOMBRE_PRODUCTO,
    NUMERO_SECUENCIA_POLIZA,
    NUMERO_POLIZA,
    TIPO_DOCUMENTO_TOMADOR,
    KEY_ID_TOMADOR,
    FECHA_SINIESTRO,
    FECHA_SUSCRIPCION,
    ESTADO_SINIESTRO,
    FECHA_ORDEN_PAGO,
    LIQUIDADO_BOLIVAR,
    FECHA_ALERTA_MES,
    FECHA_ALERTA
)
WITH SiniestrosConFila AS (
    SELECT
        CODIGO_COMPANIA, 
        CODIGO_RAMO_CONTABLE, 
        NOMBRE_RAMO_CONTABLE,
        CODIGO_PRODUCTO,
        NOMBRE_PRODUCTO,
        NUMERO_SECUENCIA_POLIZA,
        NUMERO_POLIZA,
        TIPO_DOCUMENTO_TOMADOR,
        KEY_ID_TOMADOR,
        FECHA_SINIESTRO,
        FECHA_SUSCRIPCION,
        ESTADO_SINIESTRO,
        FECHA_ORDEN_PAGO,
        LIQUIDADO_BOLIVAR,
        ROW_NUMBER() OVER (PARTITION BY KEY_ID_TOMADOR,TIPO_DOCUMENTO_TOMADOR,LIQUIDADO_BOLIVAR ORDER BY FECHA_SUSCRIPCION) AS fila
    FROM 
        `sb-ecosistemaanalitico-lago.seguros_bolivar.t_siniestros`
    WHERE 
        DATE(FECHA_SUSCRIPCION) >= '2024-01-01'  -- Definir las fechas directamente
        AND DATE_DIFF(DATE(FECHA_ORDEN_PAGO), DATE(FECHA_SUSCRIPCION), DAY) <= 90
        AND RIGHT(CAST(NUMERO_POLIZA AS STRING), 2) = '01'
        AND CODIGO_COMPANIA = 2
        AND DATE(FECHA_SINIESTRO) >=  '2024-01-01'
        AND KEY_ID_TOMADOR NOT IN ('860034313', '830053700')
        AND CODIGO_RAMO_CONTABLE NOT IN (45, 34)
        AND LIQUIDADO_BOLIVAR > 0
        AND FECHA_ORDEN_PAGO IS NOT NULL
        AND CODIGO_RAMO_CONTABLE NOT IN (70,26,118,27,888,13,310,1,68)
)
SELECT 
    S.CODIGO_COMPANIA, 
    S.CODIGO_RAMO_CONTABLE, 
    S.NOMBRE_RAMO_CONTABLE,
    S.CODIGO_PRODUCTO,
    S.NOMBRE_PRODUCTO,
    S.NUMERO_SECUENCIA_POLIZA,
    S.NUMERO_POLIZA,
    S.TIPO_DOCUMENTO_TOMADOR,
    S.KEY_ID_TOMADOR,
    S.FECHA_SINIESTRO,
    S.FECHA_SUSCRIPCION,
    S.ESTADO_SINIESTRO,
    S.FECHA_ORDEN_PAGO,
    S.LIQUIDADO_BOLIVAR,
     FORMAT_DATE('%Y-%m', CURRENT_DATE()) AS FECHA_ALERTA_MES,
    CURRENT_DATE() AS FECHA_ALERTA
FROM 
    SiniestrosConFila S
WHERE 
    S.fila = 1
    AND NOT EXISTS (  -- Excluir registros que ya existen en la tabla
        SELECT 1
        FROM sb-sandbox-usuarios.sandbox_cumplimiento.SEG_0007_VISOR_REPO T
        WHERE 
            T.KEY_ID_TOMADOR = S.KEY_ID_TOMADOR
            AND T.NUMERO_POLIZA = S.NUMERO_POLIZA
            AND T.LIQUIDADO_BOLIVAR = S.LIQUIDADO_BOLIVAR
    );
