DECLARE fecha_inicial DATE DEFAULT '2024-01-01';
DECLARE fecha_final DATE DEFAULT '2024-12-31';

-- Inserción de los registros nuevos con FECHA_ALERTA
INSERT INTO `sb-sandbox-usuarios.sandbox_cumplimiento.SEG_0101_VISOR_REPO` 
(
    CODIGO_COMPANIA, 
    CODIGO_RAMO_CONTABLE, 
    NOMBRE_RAMO_CONTABLE,
    CODIGO_PRODUCTO,
    NOMBRE_PRODUCTO,
