CREATE OR REPLACE TABLE sb-sandbox-usuarios.sandbox_cumplimiento.LIST_0001_VISOR_REPO AS
/* ============================================================
   ALERTA BENEFICIARIOS RESTRINGIDOS (CDIGO 23,29,33,35,50,28)
   Cruza beneficiarios de seguros con listas restringidas,
   incluyendo la FECHA_FIN_POLIZA m谩s reciente y el MOTIVO_ALERTA.
   ============================================================ */

WITH actores AS (
  /* ===================== 1锔 Tomador / Beneficiario ===================== */
  SELECT DISTINCT
    b.CODIGO_COMPANIA,
    b.NUMERO_POLIZA,
    b.CODIGO_PRODUCTO,
    b.FECHA_EMISION,
    b.TIPO_DOCUMENTO_TERCERO  AS tipo_doc,
    b.KEY_ID_TOMADOR          AS key_id,
    b.TIPO_BENEFICIARIO,
    b.PORCENTAJE,
    b.MARCA_ESTADO
  FROM `sb-ecosistemaanalitico-lago.seguros_bolivar.t_beneficiarios_porcentaje` b
),

restricciones AS (
  /* ===================== 2锔 Terceros restringidos ===================== */
  SELECT 
    TIPO_DOCUMENTO_TERCERO,
    KEY_ID,
    CODIGO_RESTRICCION,
    DESCRIPCION
  FROM `sb-ecosistemaanalitico-lago.seguros_bolivar.t_terceros_restringidos`
  WHERE CODIGO_RESTRICCION IN (23,29,33,35,50,28)
),

polizas AS (
  /* ===================== 3锔 Solo FECHA_FIN_POLIZA m谩s reciente ===================== */
  SELECT
    p.NUMERO_POLIZA,
    p.FECHA_FIN_POLIZA,
    p.CODIGO_RAMO_EMISION, 
    p.CODIGO_PRODUCTO
  FROM (
    SELECT
      NUMERO_POLIZA,
      FECHA_FIN_POLIZA,
      CODIGO_RAMO_EMISION, 
      CODIGO_PRODUCTO,
      ROW_NUMBER() OVER (
        PARTITION BY NUMERO_POLIZA
        ORDER BY FECHA_PROCESO DESC
      ) AS rn
    FROM `sb-ecosistemaanalitico-lago.seguros_bolivar.t_polizas_riesgos_endosos`
  ) p
  WHERE p.rn = 1
)

/* ===================== 4锔 Uni贸n final ===================== */
SELECT DISTINCT
  a.CODIGO_COMPANIA,
  a.NUMERO_POLIZA,
  a.CODIGO_PRODUCTO as CODIGO_PRODUCTO1,
  a.FECHA_EMISION,
  a.tipo_doc,
  a.key_id,
  r.CODIGO_RESTRICCION,
  r.DESCRIPCION,
  /*  Mapeo solicitado por c贸digo de restricci贸n */
  CASE r.CODIGO_RESTRICCION
    WHEN 23 THEN 'Beneficiario de seguro catalogado como PEP'
    WHEN 29 THEN 'Beneficiario de seguro sin informaci贸n actualizada'
    WHEN 33 THEN 'Beneficiario de seguro con actividad de alto riesgo'
    WHEN 35 THEN 'Beneficiario de seguro asociado anticorrupci贸n y soborno'
    WHEN 50 THEN 'Beneficiario de seguro impactado FATCA/CRS'
    WHEN 28 THEN 'Beneficiario de seguro con investigaci贸n procesal'
  END AS MOTIVO_ALERTA,
  a.TIPO_BENEFICIARIO,
  a.PORCENTAJE,
  a.MARCA_ESTADO,
  p.CODIGO_PRODUCTO,
  p.CODIGO_RAMO_EMISION,
  p.FECHA_FIN_POLIZA,
      FORMAT_DATE('%Y-%m', CURRENT_DATE()) AS FECHA_ALERTA_MES,  -- Se genera el a帽o-mes actual como marcador del per铆odo
    CURRENT_DATE() AS FECHA_ALERTA,                             -- Se agrega la fecha exacta de la alerta
    CURRENT_TIMESTAMP() AS FECHA_MODIFICACION   
FROM actores a
JOIN restricciones r
  ON a.tipo_doc = r.TIPO_DOCUMENTO_TERCERO
 AND a.key_id   = r.KEY_ID
LEFT JOIN polizas p
  ON a.NUMERO_POLIZA = p.NUMERO_POLIZA
WHERE DATE(p.FECHA_FIN_POLIZA) >= CURRENT_DATE();




















